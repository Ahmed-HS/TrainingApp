<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Red_200</item>
        <item name="colorPrimaryVariant">?attr/colorSurface</item>
        <item name="colorOnPrimary">@color/surfaceColorLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Red_200</item>
        <item name="colorSecondaryVariant">@color/Red_600</item>
        <item name="colorOnSecondary">?attr/colorSurface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="textOnSurfaceDark">@color/textHeadLineLight</item>
        <item name="textOnSurfaceSemiDark">@color/black_100</item>
        <item name="textOnSurfaceMedium">@color/textSubtitle</item>
        <item name="textOnSurfaceLight">@color/buttonBackgroundLight</item>

        <item name="cardBackgroundColor">@color/offWhite_100</item>

        <item name="colorButtonBackground">@color/buttonBackgroundLight</item>
        <item name="colorChipSelected">@color/chipSelectedLight</item>
        <item name="android:windowBackground">@color/backgroundLight</item>
        <item name="borderlessButtonStyle">@style/TrainingApp.TextButton</item>

        <item name="materialCardViewStyle">@style/TrainingApp.MaterialCard</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/hind_vadodara</item>
        <item name="android:letterSpacing">-0.01</item>

        <item name="textInputStyle">@style/TrainingApp.TextInputLayout</item>
    </style>

</resources>